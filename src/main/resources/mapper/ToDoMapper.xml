<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tencent.wxcloudrun.dao.ToDoMapper">

    <resultMap id="toDoMapper" type="com.tencent.wxcloudrun.model.ToDo">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time" javaType="java.time.LocalDateTime" />
        <result property="updateTime" column="update_time" javaType="java.time.LocalDateTime"  />
    </resultMap>

    <select id="queryAll" resultMap="toDoMapper">
        SELECT `id`, `title`, `status`, `create_time`,`update_time`
        FROM todo_list
    </select>

    <insert id="insert"
            parameterType="com.tencent.wxcloudrun.model.ToDo"
            useGeneratedKeys="true"
            keyProperty="id"
    >
        INSERT INTO `todo_list`(`title`, `status`)
        VALUES (#{title}, #{status})
    </insert>


    <select id="queryById" resultMap="toDoMapper" parameterType="java.lang.Integer">
        SELECT `id`, `title`, `status`, `create_time`,`update_time`
        FROM todo_list
        WHERE id = #{id}
    </select>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE
        FROM todo_list
        where id = #{id}
        limit 1
    </delete>

    <update id="update" parameterType="com.tencent.wxcloudrun.model.ToDo">
        UPDATE todo_list
        <set>
            <if test="title != null and title != ''">
                title=#{title},
            </if>
            <if test="status != null and status != ''">
                status=#{status},
            </if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
